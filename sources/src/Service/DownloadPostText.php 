<?php

namespace App\Service;

use App\Entity\Post;
use Symfony\Component\HttpFoundation\BinaryFileResponse;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\HttpFoundation\ResponseHeaderBag;

/**
 * Class DownloadPostText - класс-сервис для скачивания поста
 * @author
 * @package App\Service
 */
class DownloadPostText implements DownloadPostInterface
{
    /**
     * @param Post $post
     * @return array
     */
    public function getDataFromPost(Post $post)
    {
        $fileName = $post->getId() . '.txt';
        $fileContent = $post->getName();
        $fileContent .= "\n\n".$post->getDescription();

        return ['fileName' => $fileName,
            'fileContent' => $fileContent,
        ];
    }
}
